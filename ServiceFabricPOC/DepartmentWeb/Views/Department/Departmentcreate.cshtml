@model DepartmentWeb.Models.DepartmentModel

@{
    ViewData["Title"] = "Department";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Departmentcreate</title>
</head>
<body>

<h4>DepartmentModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Departmentcreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DeptId" class="control-label"></label>
                <input asp-for="DeptId" class="form-control" />
                <span asp-validation-for="DeptId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeptName" class="control-label"></label>
                <input asp-for="DeptName" class="form-control" />
                <span asp-validation-for="DeptName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeptDescription" class="control-label"></label>
                <input asp-for="DeptDescription" class="form-control" />
                <span asp-validation-for="DeptDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeCount" class="control-label"></label>
                <input asp-for="EmployeeCount" class="form-control" />
                <span asp-validation-for="EmployeeCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShiftTime" class="control-label"></label>
                <input asp-for="ShiftTime" class="form-control" />
                <span asp-validation-for="ShiftTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-primary" asp-area="" asp-controller="Department" asp-action="DepartmentList">View List</a>    
            </div>
            
        </form>
    </div>
</div>
</body>
</html>
